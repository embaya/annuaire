{% extends 'base.html.twig' %}
{% block title %}Détails d'une fiche{% endblock %}
{% block body %}
    <h1>Fiche contact</h1>
    <div class="col-lg-12">
        <div class="col-lg-3">
            <div class="text-center">
                <span style="font-size:7.5em;" class="glyphicon glyphicon-user"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <h3><strong>{{ contact.firstname|capitalize }} {{ contact.lastname|upper }}</strong></h3>
            <address>
                <strong>Département :</strong> {{ contact.departement.name }}<br>
                <span class="glyphicon glyphicon-phone-alt"></span> <abbr title="Phone">Téléphone
                    fixe:</abbr> {{ contact.phone }}<br/>
                <span class="glyphicon glyphicon-phone"></span> <abbr title="Phone">Téléphone
                    portable:</abbr> {{ contact.portable }}
            </address>
        </div>
        <div class="col-lg-3">
            <div class="text-center">
                <ul>
                    <li>
                        <a href="{{ path('contact_edit', { 'id': contact.id }) }}" title="modifier"
                           class="btn btn-info"> <span class="glyphicon glyphicon-pencil"></span> Modifier</a>
                    </li>
                    <li>
                        <br/>
                        <br/>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Supprimer" class="btn btn-danger">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <ul>
        <li>
            <br/>
            <a href="{{ path('contact_index') }}" title="Retour à liste" class="btn btn-default"><span
                        class="glyphicon glyphicon-circle-arrow-left"></span> Retour à liste</a>
        </li>
    </ul>
    <div class="clearfix"></div>
{% endblock %}
